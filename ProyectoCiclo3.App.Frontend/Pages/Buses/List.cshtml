@page
@model ProyectoCiclo3.App.Frontend.Pages.ListBusesModel
@{
}
<div class="text-center">
<h1>Listado de Buses</h1>
</div> 
<table class="table table-hover table-info">
  <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Marca</th>
        <th scope="col">Modelo</th>
        <th scope="col">Kilometraje</th>
        <th scope="col">Número de asientos</th>
        <th scope="col">Placa</th>
        <th scope="col">Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var bus in Model.Buses)
    {
        <tr>
            <td>@bus.id</td>
            <td>@bus.marca</td>
            <td>@bus.modelo</td>
            <td>@bus.kilometraje</td>
            <td>@bus.numero_asientos</td>
            <td>@bus.placa</td>
            <td>
              <a class="btn btn-info" asp-page="./Details" asp-route-busId="@bus.id"><i class="fas fa-adjust"></i><b>Ver</b></a>
              <a class="btn btn-info" asp-page="./Edit" asp-route-busId="@bus.id"><b>Editar</b></a>
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal_@bus.id">
                <b>Eliminar</b>
              </button>
              <div class="modal fade" id="exampleModal_@bus.id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b>Eliminación de registro</b></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    ¿Está eguro que desea eliminar el Bus: <b>@bus.id</b>?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><b>Cancelar</b></button>
                    <form method="POST">
                      <input type="number" class="form-control d-none" id="id" name="id" placeholder="id" asp-for="@bus.id">
                      <button type="submit"class="btn btn-danger" ><b>Eliminar</b></button>
                    </form>
                    </div>
                </div>
              </div>
            </div>
        </tr>
    }        
  </tbody>
</table>
